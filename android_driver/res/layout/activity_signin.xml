<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tectalk.tectalk_driver.SigninActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SigninPage" />
 
    <EditText
        android:id="@+id/edittxtID_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:text="ID" >

    </EditText>

    <EditText
        android:id="@+id/edittxtPW_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittxtID_signin"
        android:ems="10"
        android:text="PW" />

    <EditText
        android:id="@+id/edittxtName_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittxtPW_signin"
        android:ems="10"
        android:text="Name" />

    <EditText
        android:id="@+id/edittxtPhone_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittxtName_signin"
        android:ems="10"
        android:text="Phone" />

    <EditText
        android:id="@+id/edittxtCompany_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittxtPhone_signin"
        android:ems="10"
        android:text="Company" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittxtCompany_signin"
        android:text="submit" />

</RelativeLayout>